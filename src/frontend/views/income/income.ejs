<%- contentFor('content') %>

<div class="card">
    <div class="card-body">
        <h2 class="card-title">Registro de Ingresos</h2>
        
        <!-- Add Income Form -->
        <form action="/income" method="POST" class="mb-4">
            <div class="row">
                <div class="col-md-3">
                    <div class="mb-3">
                        <label for="amount" class="form-label">Monto</label>
                        <input type="number" step="0.01" class="form-control" id="amount" name="amount" required>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="mb-3">
                        <label for="source" class="form-label">Fuente</label>
                        <input type="text" class="form-control" id="source" name="source" required>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="mb-3">
                        <label for="date" class="form-label">Fecha</label>
                        <input type="date" class="form-control" id="date" name="date" required>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="mb-3">
                        <label for="observation" class="form-label">Observación</label>
                        <input type="text" class="form-control" id="observation" name="observation">
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Registrar Ingreso</button>
        </form>

        <!-- Income Table -->
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Monto</th>
                        <th>Fuente</th>
                        <th>Observación</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% income.forEach(function(item) { %>
                    <tr>
                        <td><%= new Date(item.date).toLocaleDateString() %></td>
                        <td>$<%= item.amount.toFixed(2) %></td>
                        <td><%= item.source %></td>
                        <td><%= item.observation %></td>
                        <td>
                            <button class="btn btn-sm btn-warning" onclick="editIncome(<%= item.id %>)">Editar</button>
                            <button class="btn btn-sm btn-danger" onclick="deleteIncome(<%= item.id %>)">Eliminar</button>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- contentFor('scripts') %>
