function editIncome(id) {
    // Implementar edición
    console.log('Editar ingreso:', id);
}

function deleteIncome(id) {
    if (confirm('¿Está seguro de eliminar este ingreso?')) {
        // Implementar eliminación
        console.log('Eliminar ingreso:', id);
    }
