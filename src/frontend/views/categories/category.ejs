<div class="container-fluid">
  <nav class="navbar navbar-light bg-light">
    <div class="container-fluid">
      <span class="navbar-brand mb-0 h1">CATEGORÍAS</span>
      <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalAddCategory"><i
          class="fa-solid fa-plus"></i> Agregar categoría</button>
    </div>
  </nav>
  <style>
    .fade-in {
      opacity: 0;
      transform: translateY(20px);
      transition: all 0.4s ease;
    }

    .fade-in.show {
      opacity: 1;
      transform: translateY(0);
    }
  </style>
  <!-- Contenedor de tarjetas (usa row para alinearlas horizontalmente) -->
  <div class="row mt-3" id="cardscategorias">
  </div>

</div>

<div class="modal fade" id="modalAddCategory" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Crea una nueva categoría</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body d-grid gap-3">
        <div class="row">
          <div class="col-6">
            <label for="nomb_cater" class="form-label">Nombre categoría</label>
            <input id="nomb_cater" type="text" class="form-control form-control-sm"
              placeholder="Ingrese el nombre de la categoría" required />
          </div>
          <div class="col-6">
            <label for="desc_cater" class="form-label">Rango limite</label>
            <input type="text" id="ran_limit" class="form-control form-control-sm"
              placeholder="Ingrese el rango limite de la categoría" />
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <label for="desc_cater" class="form-label">Observación</label>
            <textarea id="desc_cater" class="form-control" placeholder="Añade una observación (opcional)"
              style="resize: none; width: 100%; field-sizing: content"></textarea>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" id="btnCerrarCategory" class="btn btn-outline-dark"
          data-bs-dismiss="modal">Cerrar</button>
        <button type="button" id="btnGuardar" class="btn btn-success">Guardar</button>
      </div>
    </div>
  </div>
</div>
<script type="module" src="/js/categories/category.js"></script>